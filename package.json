{
  "name": "vivekananda-search-extension",
  "version": "1.0.0",
  "description": "A browser extension to search the complete works of Swami Vivekananda",
  "private": true,
  "scripts": {
    "build": "mkdir -p dist && cp -r src/* dist/",
    "test": "echo \"No tests implemented yet\" && exit 0",
    "lint": "npm run lint:html && npm run lint:js",
    "lint:html": "npx html-validate --config .htmlvalidate.json src/**/*.html",
    "lint:js": "npx eslint src/**/*.js",
    "format": "prettier --write '**/*.{js,html,json,md}'",
    "format:check": "prettier --check '**/*.{js,html,json,md}'",
    "package:chrome": "npm run build && cd dist && zip -r ../vivekananda-search-chrome.zip *",
    "package:firefox": "npm run build && cd dist && zip -r ../vivekananda-search-firefox.zip *",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/vivekananda-search-extension.git"
  },
  "keywords": [
    "browser-extension",
    "vivekananda",
    "search",
    "spirituality",
    "hinduism"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/vivekananda-search-extension/issues"
  },
  "homepage": "https://github.com/yourusername/vivekananda-search-extension#readme",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.html": [
      "html-validate --config .htmlvalidate.json",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "src/**/*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "html-validate": "^9.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  }
}
